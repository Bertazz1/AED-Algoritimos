public static void main(String[] args) {
    entradaAbrir();
    int N_DIA_SEMANA = lerInt("Digite o número do dia da semana");
    entradaFechar();

    switch (N_DIA_SEMANA) {
        case 1:
        System.out.println("O dia da semana refente ao número é:Domingo");
            
            break;
        case 2:
         System.out.println("O dia da semana refente ao número é:Segunda");
            break;  
        case 3:
        System.out.println("O dia da semana refente ao número é:Terça");

            break; 
        case 4:
        System.out.println("O dia da semana refente ao número é:Quarta");

            break;
        case 5:
        System.out.println("O dia da semana refente ao número é:Quinta");

            break;
        case 6:
        System.out.println("O dia da semana refente ao número é:Sexta");

            break;
        case 7:
        System.out.println("O dia da semana refente ao número é:Sabado");

            break;
        default:
            break;
    }





